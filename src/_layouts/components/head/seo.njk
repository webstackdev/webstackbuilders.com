{%- set pageUrl = page.url | absoluteUrl -%}
{#- Page-Specific -#}
    <meta name="description" content="{{ description or autoDescription or site.description }}">
    {%- set pageTitle = title or site.title -%}
    <meta name="og:title" content="{% pageTitle pageTitle=pageTitle %}" />
    {%- set pageDescription = description or autoDescription or site.description -%}
    <meta name="og:description" content="{% pageDescription pageDescription=pageDescription %}">
    <meta property="og:url" content="{{ pageUrl }}">
{#- General -#}
    <meta property="og:site_name" content="{{ site.title }}">
    <meta property="og:locale" content="{{ site.locale }}">
{#- JSON LD Schema.org markup -#}
    {% jsonLdScript meta, type, tags %}
{#- Posts get additional meta tags -#}
{%- if layout == 'article' -%}
    <meta property="og:type" content="article">
    <meta property="article:published_time" content="{{ page.date | dateToISO }}">
{%- endif -%}
