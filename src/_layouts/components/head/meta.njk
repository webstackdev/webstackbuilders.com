<title>{% pageTitle title %}</title>
<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="description" content="{% pageDescription description %}" />
<meta name="author" content="{{ author.name }}">
{#- @TODO: Enable SEO -#}
{#- % include 'seo.njk' %#}
{#- Open Graph meta tags for Twitter and Facebook social shares -#}
{% include "./social.njk" %}
{#- Used to sets the color of the surrounding user interface for e.g. the -#}
{#- browser title bar. It is updated by script when the theme changes.    -#}
{%- set default = themes | findById('default') -%}
<meta name="theme-color" content="{{ default.colors.backgroundOffset }}">
{#- Adds three <link> tags for favicons using 'eleventy-favicon' plugin: -#}
{#- `favicon.ico`, `favicon.svg`, and `apple-touch-icon.png` -#}
{% favicon buildPaths.faviconSvgSourceFilename %}
{#- Web manifest file for Progressive Web Application app usage #}
<link rel="manifest" href="{{ '/manifest.json' | url }}">
{#- RSS Feed #}
<link
  type="application/rss+xml"
  rel="alternate"
  href="{{ '/feed.xml' | absoluteUrl }}"
  title="RSS Feed for {{ site.title }}"
>
{#- Webmentions #}
<link rel="pingback" href="https://webmention.io/{{ site.domain }}/xmlrpc">
<link rel="webmention" href="https://webmention.io/{{ site.domain }}/webmention">
<link rel="canonical" href="{% canonical permalink %}">