
<meta charset="UTF-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1" />

<title>{% pageTitle %}</title>
<meta name="description" content="{{ pageDescription }}" />
<meta name="author" content="{{ author.name }}">

{# Open Graph meta tags for Twitter and Facebook social shares #}
{% include "./social.njk" %}

{# Favicons #}
{% include "./favicon.njk" %}

{# Web manifest file for Progressive Web Application app usage #}
<link rel="manifest" href="{{ '/manifest.json' | url }}">

<meta name="theme-color" content="#1a1a1a">

{# RSS Feed #}
<link type="application/rss+xml" rel="alternate" href="{{ site.url }}/feed.xml" title="RSS Feed for {{ site.title }}">

{# Webmentions #}
<link rel="pingback" href="https://webmention.io/webstackbuilders.com/xmlrpc">
<link rel="webmention" href="https://webmention.io/webstackbuilders.com/webmention">

<link rel="canonical" href="{{ absolutePageUrl }}">
