---
layout: base
---
<article
  id="{{ title | slug }}"
  class="article"
  role="article"
  itemscope
  itemtype="http://schema.org/BlogPosting"
  aria-labelledby="{{ title | slug }}-title"
>
  <header class="article-header">
    {% if not alt %}
      {% set alt = ['Cover image for article ', title] | join %}
    {% endif %}
    {% asyncImageHandler cover, alt %}

    {# Article Title #}
    <h1
      id="{{ title | slug }}-title"
      class="article-header__title title"
      itemprop="headline"
    >
      {{ title }}
    </h1>
    <div class="article-header__meta">
      {# Article Date #}
      <time
        class="article-header__date"
        itemprop="datePublished"
        datetime="{{ page.date | dateToISO }}"
      >
        {{ page.date | readableDate }}
      </time>
      {# Article Time to Read #}
      <p>It will take {{ content | timeToRead }} to read this</p>
      {# Article Tags #}
      {% if tags %}
        <span aria-label="in category">&sdot;</span>
        <span class="article-header__tags">
          {{ tags | join(', ') }}
        </span>
      {% endif %}
      {# Article Draft Status #}
      {% if draft %}
        <span aria-hidden="true">&sdot;</span>
        <span class="article-header__status">(Draft)</span>
      {% endif %}
    </div>
  </header>
  {# Article Content #}
  <div class="article__content markdown" itemprop="articleBody">
    {{ content | safe }}
  </div>
  {# Article Footer wrapper #}
  <div class="article__footer">
    <div hidden>
      <a href="{{ page.url | absoluteUrl }}">{{ title }}</a>
      <p>
        <a rel="author" href="{{ site.baseUrl }}">{{ author.name }}</a>
        {% asyncImageHandler author.avatar, "Site author's avatar image" %}
      </p>
    </div>

    <p class="article__footer__info">
      Published in [{{ tags | join(', ') }}] &sdot; {{ page.date | readableDate }} <br/>
    </p>

    <a
      href="https://twitter.com/intent/follow?screen_name={{ author.social.twitter.name }}"
      target="_blank"
      rel="noopener noreferrer"
      title="Follow {{ author.name }} on Twitter"
      class="btn btn--twitter"
    >
      {% icon "twitter" %} Follow @{{ author.social.twitter.name }}
    </a>
  </div>
</article>

<div class="articlesection">
  <h3 class="articlesection__title">Other things I've written</h3>
  {% include './modules/otherarticles.njk' %}
</div>