 /** Global styles for PrismJS code blocks */
pre[class*='language-'],
code[class*='language-'] {
  -moz-hyphens: none;
  -moz-tab-size: 4;
  -ms-hyphens: none;
  -o-tab-size: 4;
  -webkit-hyphens: none;
  color: var(--code-global-color);
  direction: ltr;
  font-family: var(--code-global-font-family);
  font-size: 0.9em;
  hyphens: none;
  line-height: 1.2em;
  tab-size: 4;
  text-align: left;
  text-shadow: none; // only in dark
  white-space: pre;
  word-break: normal;
  word-spacing: normal;
}

/** Styles for parts of a document that has been highlighted by the user */
pre[class*='language-']::selection,
code[class*='language-']::selection,
pre[class*='language-'] *::selection,
code[class*='language-'] *::selection {
  background: var(--code-selected-background);
  text-shadow: var(--code-selected-text-shadow);
}

/** Code blocks */
pre[class*='language-'] {
  background: var(--code-block-background);
  border: var(--code-block-border);
  margin: 0.5em 0;
  overflow: auto;
  padding: 1em;
}

/** Inline code */
:not(pre) > code[class*='language-'] {
  background: var(--code-inline-background);
  border: var(--code-inline-border);
  border-radius: var(--code-inline-border-radius);
  color: var(--code-inline-color);
  padding: 0.1em 0.2em;
}

@media print {
  pre[class*='language-'],
  code[class*='language-'] {
    text-shadow: none;
  }
}

/**
 * Standard tokens
 */

/** True and false, and pairs with similar concepts e.g. yes and no. */
.token.boolean {
  color: var(--code-standard-token-boolean);
}

/** Functions/methods/classes/types that are available out of the box. */
.token.builtin {
  color: var(--code-standard-token-builtin);
}

/** A string with only a single character, enforced by the language. */
.token.char {
  color: var(--code-standard-token-char);
}

/** The name of a class, interface, trait, or type.  */
.token.class-name {
  color: var(--code-standard-token-class-name);
}
.token.maybe-class-name {
  color: var(--code-standard-token-maybe-class-name);
}

/** Code comments. */
.token.comment {
  color: var(--code-standard-token-comment);
  font-style: italic;
}

/** The name of a constant. */
.token.constant {
  color: var(--code-standard-token-constant);
}

/** The name of a function or method. */
.token.function {
  color: var--code-standard-token-function();
}
.token.function .token.maybe-class-name {
  color: #dcdcaa;
}

/** Anything that is important and needs special highlighting. */
.token.important {
  color: var(--code-standard-token-important);
  font-style: var(--code-standard-token-important-font-style);
}

/** Pre-defined and reserved words. */
.token.keyword {
  color:  var(--code-standard-token-keyword);
  &.control-flow {
    color:  var(--code-standard-token-keyword-control-flow);
  }
  &.module {
    color:  var(--code-standard-token-keyword-module);
  }
}

/** A numerical value, regardless of base or order, and real or imaginary. */
.token.number {
  color: var(--code-standard-token-number);
}

/** A symbol representing a mathematical operation or logical operation. */
.token.operator {
  color: var(--code-standard-token-operator);
  &.arrow {
    color: var(--code-standard-token-operator-arrow);
  }
}

/** An attribute/characteristic or object/map key. */
.token.property {
  color: var(--code-standard-token-property);
}

/** Punctuation such as brackets, parentheses, commas, and more. */
.token.punctuation {
  color: var(--code-standard-token-punctuation);
}

/** A regular expression. */
.token.regex {
  color: var(--code-standard-token-regex);
}

/** Literal text including numbers, symbols, and special characters. */
.token.string {
  color: var(--code-standard-token-string);
}

/** A primitive data type found in some languages.  */
.token.symbol {
  color: var(--code-standard-token-symbol);
}

/** A link to another page or resource. */

/** Used on special variables e.g. Less or Bash, not general variables. */
.token.variable {
  color: var(--code-standard-token-variable);
}

/**
 * HTML and XML tokens
 */

/** A property of a markup tag and its value/argument. */
.token.attr-name {
  color: var(--code-markup-token-attr-name);
}
.token.attr-value {
  color: var(--code-markup-token-attr-value);
  .token.punctuation.attr-equals {
    color: var(--code-markup-token-attr-value-punctuation-attr-equals);
  }
}

/** Character data. */
.token.cdata {
  color: var(--code-markup-token-cdata);
  font-style: italic;
}

/** Document type declaration like HTML. */
.token.doctype {
  color: var(--code-markup-token-doctype);
  font-style: italic;
  .token.doctype-tag {
    color: var(--code-markup-token-doctype-doctype-tag);
  }
  .token.name {
    color: var(--code-markup-token-doctype-name);
  }
}

/** Code used to display reserved characters like &#160; for nbsp. */
.token.entity {
  color: var(--code-markup-token-entity);
}

/** Uniquely named elements and attributes in XML documents. */
.token.namespace {
  color: var(--code-markup-token-namespace);
  opacity: 0.7;
}

/** The first tag in an XML document with version and encoding.  */
.token.prolog {
  color: var(--code-markup-token-prolog);
  font-style: italic;
}

/** A markup tag e.g. HTML and XML tags. */
.token.tag {
  color: var(--code-markup-token-tag);
}
.token.tag .token.punctuation {
  color: var(--code-markup-token-tag-punctuation);
}

/**
 * Markdown tokens
 */

/** Bolded text. */
.token.bold {
  font-weight: bold;
}

/** Italicised text. */
.token.italic {
  font-style: italic;
}

/**
 * Style tokens
 */

/** @ rules statements in stylesheets. */
.token.atrule {
  color: var(--code-style-token-atrule);
}
.token.atrule .token.rule {
  color: var(--code-style-token-atrule-rule);
}
.token.atrule .token.url {
  color: var(--code-style-token-atrule-url);
}
.token.atrule .token.url .token.function {
  color: var(--code-style-token-atrule-url-function);
}
.token.atrule .token.url .token.punctuation {
  color: var(--code-style-token-atrule-url-punctuation);
}

/** Code that identifies or picks something out of a group. */
.token.selector {
  color: var(--code-style-token-selector);
}

/**
 * Diff tokens
 */

/** Deleted line respectively. */
.token.deleted {
  color: var(--code-style-token-deleted);
}

/** Added or modified line. */
.token.inserted {
  color: var(--code-style-token-inserted);
}

/**
 * Other tokens
 */

.token.console {
  color: var(--code-other-token-console);
}

.token.escape {
  color: var(--code-other-token-escape);
}

.token.imports .token.maybe-class-name {
  color: var(--code-other-token-imports-maybe-class-name);
}

.token.exports .token.maybe-class-name {
  color: var(--code-other-token-exports-maybe-class-name);
}

.token.interpolation {
  color: var(--code-other-token-interpolation);
}

.token.parameter {
  color: var(--code-other-token-parameter);
}

.token.punctuation.interpolation-punctuation {
  color: var(--code-other-token-interpolation-punctuation);
}

.token.unit {
  color: var(--code-other-token-unit);
}

.token.url  {
  color: var(--code-other-token-url);
}

.token.directive.tag .tag {
  background: var(--code-other-token-directive-tag-background);
  color: var(--code-other-token-directive-tag-color);
}


/**
 * Language-specific Auto Hotkey tokens
 */

.language-autohotkey .token.selector {
  color: var(--code-other-token-language-autohotkey-selector);
}
.language-autohotkey .token.tag {
  color: var(--code-other-token-language-autohotkey-tag);
}
.language-autohotkey .token.keyword {
  color: var(--code-other-token-language-autohotkey-keyword);
}

/**
 * Language-specific CSS tokens
 */

pre[class*='language-css'],
code[class*='language-css'] {
  color: var(--code-other-token-language-css-string-url);
}

.language-css .token.string.url {
  text-decoration: underline;
}


/**
 * Language-specific HTML tokens
 */


pre[class*='language-html'],
code[class*='language-html'] {
  color: var(--code-other-token-language-html-block);
}

.language-html .token.punctuation {
  color: var(--code-other-token-language-html-punctuation);
}

.language-html .language-css .token.punctuation {
  color: var(--code-other-token-language-html-css-punctuation);
}

.language-html .language-javascript .token.punctuation {
  color: var(--code-other-token-language-html-javascript-punctuation);
}


/**
 * Language-specific Javascript tokens
 */

pre[class*='language-javascript'],
code[class*='language-javascript'],
pre[class*='language-jsx'],
code[class*='language-jsx'],
pre[class*='language-typescript'],
code[class*='language-typescript'],
pre[class*='language-tsx'],
code[class*='language-tsx'] {
  color: var(--code-language-javascript-block);
}


/**
 * Language-specific JSON tokens
 */

.language-json .token.boolean {
  color: var(--code-language-json-token-boolean);
}
.language-json .token.number {
  color: var(--code-language-json-token-number);
}
.language-json .token.property {
  color: var(--code-language-json-token-property);
}


/**
 * Language-specific Regex tokens
 */

.language-regex .token.anchor {
  color: var(--code-language-regex-token-anchor);
}


/**
 * Line Numbers plugin overrides http://prismjs.com/plugins/line-numbers/
 */

.line-numbers.line-numbers .line-numbers-rows {
  border-right-color: var(--code-line-numbers-plugin-rows);
}

.line-numbers .line-numbers-rows > span:before {
  color: var(--code-line-numbers-plugin-span);
}


/**
 * Line highlighting
 */

pre[class*='language-'] > code[class*='language-'] { // not in light scss
  position: relative;
  z-index: 1;
}


/**
 *  Line Highlight plugin overrides http://prismjs.com/plugins/line-highlight/
 */
.line-highlight.line-highlight {
  background: var(--code-line-highlight-plugin-background);
  box-shadow: var(--code-line-highlight-plugin-box-shadow);
  z-index: var(--code-line-highlight-plugin-z-index);
}
