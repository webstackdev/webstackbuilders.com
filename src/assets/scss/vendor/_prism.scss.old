/**
 * Selectable Dark / Light Theme for PrismJS
 */

:root {
  /** Global styles for PrismJS code blocks */
  --code-global-color: #d4d4d4;
  --code-global-font-family: 'Menlo', 'Monaco', 'Consolas', 'Andale Mono', 'Ubuntu Mono', 'Courier New', 'monospace';
  /** Styles for parts of a document that has been highlighted by the user */
  --code-selected-background: #264f78;
  --code-selected-text-shadow: none;
  /** Code blocks */
  --code-block-background: #1e1e1e;
  --code-block-border: inherit;
  /** Inline code */
  --code-inline-background: #1e1e1e;
  --code-inline-border: inherit;
  --code-inline-border-radius: 0.3em;
  --code-inline-color: #db4c69;
  /** Standard tokens */
  --code-standard-token-boolean: #569cd6;
  --code-standard-token-builtin: #ce9178;
  --code-standard-token-char: #ce9178;
  --code-standard-token-class-name: #4ec9b0;
  --code-standard-token-maybe-class-name: #4ec9b0;
  --code-standard-token-comment: #6a9955;
  --code-standard-token-constant: #9cdcfe;
  --code-standard-token-function: #dcdcaa;
  --code-standard-token-important: #569cd6;
  --code-standard-token-important-font-style:  inherit;
  --code-standard-token-keyword: #569cd6;
  --code-standard-token-keyword-control-flow: #c586c0;
  --code-standard-token-keyword-module: #c586c0;
  --code-standard-token-number: #b5cea8;
  --code-standard-token-operator: #d4d4d4;
  --code-standard-token-operator-arrow: #569cd6;
  --code-standard-token-property: #9cdcfe;
  --code-standard-token-punctuation: #d4d4d4;
  --code-standard-token-regex: #d16969;
  --code-standard-token-string: #ce9178;;
  --code-standard-token-symbol: #b5cea8;
  --code-standard-token-variable: #9cdcfe;
  /** HTML and XML tokens */
  --code-markup-token-attr-name: #9cdcfe;
  --code-markup-token-attr-value: #ce9178;
  --code-markup-token-attr-value-punctuation-attr-equals: #d4d4d4;
  --code-markup-token-cdata: #808080;
  --code-markup-token-doctype: inherit;
  --code-markup-token-doctype-doctype-tag: #569cd6;
  --code-markup-token-doctype-name: #9cdcfe;
  --code-markup-token-entity: #569cd6;
  --code-markup-token-namespace: #4ec9b0;
  --code-markup-token-prolog: #6a9955;
  --code-markup-token-tag: #569cd6;
  --code-markup-token-tag-punctuation: #808080;
  /** Style tokens */
  --code-style-token-atrule: #ce9178;
  --code-style-token-atrule-rule: #c586c0;
  --code-style-token-atrule-url: #9cdcfe;
  --code-style-token-atrule-url-function: #dcdcaa;
  --code-style-token-atrule-url-punctuation: #d4d4d4;
  --code-style-token-selector: #d7ba7d;
  /** Diff tokens */
  --code-style-token-deleted: #ce9178;
  --code-style-token-inserted: #b5cea8;
  /** Other tokens */
  --code-other-token-console: #9cdcfe;
  --code-other-token-escape: #d7ba7d;
  --code-other-token-imports-maybe-class-name: #9cdcfe;
  --code-other-token-exports-maybe-class-name: #9cdcfe;
  --code-other-token-interpolation: #9cdcfe;
  --code-other-token-parameter: #9cdcfe;
  --code-other-token-interpolation-punctuation: #569cd6;
  --code-other-token-unit: #b5cea8;
  --code-other-token-url: inherit;
  --code-other-token-directive-tag-background: inherit;
  --code-other-token-directive-tag-color: inherit;
  /** Language-specific Auto Hotkey tokens */
  --code-other-token-language-autohotkey-selector: inherit;
  --code-other-token-language-autohotkey-tag: inherit;
  --code-other-token-language-autohotkey-keyword: inherit;
  /** Language-specific CSS tokens */
  --code-other-token-language-css-string-url: #ce9178;
  /** Language-specific HTML tokens */
  --code-other-token-language-html-block: #d4d4d4;
  --code-other-token-language-html-punctuation: #808080;
  --code-other-token-language-html-css-punctuation: #d4d4d4;
  --code-other-token-language-html-javascript-punctuation: #d4d4d4;
  /** Language-specific Javascript tokens */
  --code-language-javascript-block: #9cdcfe;
  /** Language-specific JSON tokens */
  --code-language-json-token-boolean: inherit;
  --code-language-json-token-number: inherit;
  --code-language-json-token-property: inherit;
  /**  Language-specific Regex tokens */
  --code-language-regex-token-anchor: #dcdcaa;
  /** Line Numbers plugin overrides */
  --code-line-numbers-plugin-rows: inherit;
  --code-line-numbers-plugin-span: inherit;
  /** Line Highlight plugin overrides */
  --code-line-highlight-plugin-background: #f7ebc6;
  --code-line-highlight-plugin-box-shadow: inset 5px 0 0 #f7d87c;
  --code-line-highlight-plugin-z-index: 0;
}

html[data-theme='light'] {
  /** Global styles for PrismJS code blocks */
  --code-global-color: #393a34;
  --code-global-font-family: 'Consolas', 'Bitstream Vera Sans Mono', 'Courier New', 'Courier', 'monospace';
