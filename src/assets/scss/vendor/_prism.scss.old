  --code-selected-text-shadow: none;
  /** Code blocks */
  --code-block-background: white;
  --code-block-border: 1px solid #dddddd;
  /** Inline code */
  --code-inline-background: #f8f8f8;
  --code-inline-border: 1px solid #dddddd;
  --code-inline-border-radius: inherit;
  --code-inline-color: inherit;
  /** Standard tokens */
  --code-standard-token-boolean: #36acaa;
  --code-standard-token-builtin: inherit;
  --code-standard-token-char: inherit;
  --code-standard-token-class-name: #2b91af;
  --code-standard-token-maybe-class-name: inherit;
  --code-standard-token-comment: #008000;
  --code-standard-token-constant: #36acaa;
  --code-standard-token-function: #393a34;
  --code-standard-token-important: #e90;
  --code-standard-token-important-font-style:  bold;
  --code-standard-token-keyword: #0000ff;
  --code-standard-token-keyword-control-flow: inherit;
  --code-standard-token-keyword-module: inherit;
  --code-standard-token-number: #36acaa;
  --code-standard-token-operator: #393a34;
  --code-standard-token-operator-arrow: inherit;
  --code-standard-token-property: #ff0000;
  --code-standard-token-punctuation: #393a34;
  --code-standard-token-regex:  #ff0000;
  --code-standard-token-string: #a31515;
  --code-standard-token-symbol: #36acaa;
  --code-standard-token-variable: #36acaa;
  /** HTML and XML tokens */
  --code-markup-token-attr-name:  #ff0000;
  --code-markup-token-attr-value: #0000ff;
  --code-markup-token-attr-value-punctuation-attr-equals: inherit;
  --code-markup-token-cdata: #008000;
  --code-markup-token-doctype: #008000;
  --code-markup-token-doctype-doctype-tag: inherit;
  --code-markup-token-doctype-name: inherit;
  --code-markup-token-entity: #ff0000;
  --code-markup-token-namespace: inherit;
  --code-markup-token-prolog: #008000;
  --code-markup-token-tag: #800000;
  --code-markup-token-tag-punctuation: inherit;
  /** Style tokens */
  --code-style-token-atrule: inherit;
  --code-style-token-atrule-rule: inherit;
  --code-style-token-atrule-url: inherit;
  --code-style-token-atrule-url-function: inherit;
  --code-style-token-atrule-url-punctuation: inherit;
  --code-style-token-selector: #00009f;
  /** Diff tokens */
  --code-style-token-deleted: #9a050f;
  --code-style-token-inserted: #36acaa;
    /** Other tokens */
  --code-other-token-console: inherit;
  --code-other-token-escape: inherit;
  --code-other-token-imports-maybe-class-name: inherit;
  --code-other-token-exports-maybe-class-name: inherit;
  --code-other-token-interpolation: inherit;
  --code-other-token-parameter: inherit;
  --code-other-token-interpolation-punctuation: inherit;
  --code-other-token-unit: inherit;
  --code-other-token-url: #36acaa;
  --code-other-token-directive-tag-background: #ffff00;
  --code-other-token-directive-tag-color: #393a34;
  /** Language-specific Auto Hotkey tokens */
  --code-other-token-language-autohotkey-selector: #0000ff;
  --code-other-token-language-autohotkey-tag: #9a050f;
  --code-other-token-language-autohotkey-keyword: #00009f;
  /** Language-specific CSS tokens */
  --code-other-token-language-css-string-url: #0000ff;
  /** Language-specific HTML tokens */
  --code-other-token-language-html-block: inherit;
  --code-other-token-language-html-punctuation: inherit;
  --code-other-token-language-html-css-punctuation: inherit;
  --code-other-token-language-html-javascript-punctuation: inherit;
  /** Language-specific Javascript tokens */
  --code-language-javascript-block: inherit;
  /** Language-specific JSON tokens */
  --code-language-json-token-boolean: #0000ff;
  --code-language-json-token-number: #0000ff;
  --code-language-json-token-property: #2b91af;
  /**  Language-specific Regex tokens */
  --code-language-regex-token-anchor: inherit;
  /** Line Numbers plugin overrides */
  --code-line-numbers-plugin-rows: #a5a5a5;
  --code-line-numbers-plugin-span: #2b91af;
  /** Line Highlight plugin overrides */
  --code-line-highlight-plugin-background: linear-gradient(to right, rgba(193, 222, 241, 0.2) 70%, rgba(221, 222, 241, 0));
  --code-line-highlight-plugin-box-shadow: inherit;
  --code-line-highlight-plugin-z-index: inherit;
}

