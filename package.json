{
  "name": "webstack-builders-corporate-website-eleventy",
  "version": "0.0.1",
  "description": "This is the corporate website for Webstack Builders, implemented with Eleventy",
  "keywords": [],
  "author": "Kevin Brown <kevin@webstackbuilders.com> (https://webstackbuilders.com/)",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webstackbuilders/webstack-builders-corporate-website-eleventy"
  },
  "bugs": {
    "url": "https://github.com/webstackbuilders/webstack-builders-corporate-website-eleventy/issues"
  },
  "node": ">=17.1.0",
  "scripts": {
    "prebuild": "run-s clean mkdir:public",
    "build": "run-s build:script build:css build:html",
    "build:css": "sass src/assets/scss/index.scss public/css/index.css",
    "build:script": "webpack --config webpack.config.prod.js",
    "build:html": "cross-env ELEVENTY_ENV=production eleventy",
    "postbuild": "run-s postbuild:*",
    "postbuild:social-images": "npx eleventy-social-images --outputDir public --dataFile social/pages.json --templatePath social/template.html",
    "postbuild:social-styles": "sass src/assets/scss/social.scss social/style.css",
    "bump": "npm --no-git-tag-version version",
    "clean": "npx del public && npx del social",
    "debug": "DEBUG=* npx eleventy",
    "format": "run-p format:*",
    "format:js": "prettier '**/*.js' --write && eslint '**/*.js' --fix",
    "format:json": "prettier '**/*.json' --write",
    "format:sass": "stylelint --fix 'src/assets/css/**/*.scss' --custom-syntax postcss-scss",
    "mkdir:public": "npx mkdirp ./public/js && npx mkdirp ./public/css",
    "serve": "npm run build && serve ./public/",
    "prestart": "run-s clean mkdir:public build:script build:css",
    "start": "cross-env ELEVENTY_ENV=development run-p watch:*",
    "watch:script": "webpack --config webpack.config.dev.js",
    "watch:css": "sass --watch src/assets/scss/index.scss public/css/index.css",
    "watch:html": "ELEVENTY_ENV=development npx eleventy --watch --serve --incremental",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "//": "stylelint is pinned at ^9.1.0 by dependencies",
  "devDependencies": {
    "@11ty/eleventy": "1.0.0",
    "@11ty/eleventy-img": "2.0.0",
    "@11ty/eleventy-plugin-directory-output": "1.0.1",
    "@11ty/eleventy-plugin-inclusive-language": "1.0.3",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@11tyrocks/eleventy-plugin-social-images": "^0.4.1",
    "@types/markdown-it": "12.2.3",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "autoprefixer": "^10.4.4",
    "core-js": "3.22.0",
    "cross-env": "7.0.3",
    "cssnano": "^5.1.7",
    "date-fns": "2.28.0",
    "del-cli": "4.0.1",
    "eleventy-plugin-lazyimages": "2.1.2",
    "eslint": "8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-jsdoc": "^39.2.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-minifier": "4.0.0",
    "luxon": "2.3.1",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.6.2",
    "markdown-it-emoji": "2.0.0",
    "md5-file": "5.0.0",
    "mkdirp": "1.0.4",
    "npm-run-all": "^4.1.5",
    "outdent": "0.8.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-scss": "4.0.3",
    "prettier": "2.6.2",
    "sass": "1.50.0",
    "serve": "13.0.2",
    "stylelint": "^14.6.1",
    "stylelint-a11y": "1.2.3",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-images": "2.0.1",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0",
    "terser": "5.12.1",
    "terser-webpack-plugin": "5.3.1",
    "ts-loader": "9.2.8",
    "tslib": "2.3.1",
    "typescript": "4.6.3",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2",
    "webpack-merge": "5.8.0"
  },
  "browserslist": [
    "> 1%",
    "not IE 11"
  ]
}
