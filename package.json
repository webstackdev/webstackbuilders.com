{
  "name": "webstack-builders-corporate-website-eleventy",
  "version": "0.0.1",
  "description": "This is the corporate website for Webstack Builders, implemented with Eleventy",
  "keywords": [],
  "author": "Kevin Brown <kevin@webstackbuilders.com> (https://webstackbuilders.com/)",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webstackbuilders/webstack-builders-corporate-website-eleventy"
  },
  "bugs": {
    "url": "https://github.com/webstackbuilders/webstack-builders-corporate-website-eleventy/issues"
  },
  "node": ">=17.1.0",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "cross-env ELEVENTY_ENV=prod run-p build:eleventy build:sass",
    "postbuild": "run-p build:social-images build:postcss",
    "build:eleventy": "eleventy",
    "build:postcss": "postcss public/css/*.css -u autoprefixer cssnano -r --no-map",
    "build:sass": "run-p build:sass-site build:sass-social",
    "build:sass-site": "sass --no-source-map src/sass/style.scss public/css/style.css",
    "build:sass-social": "sass --no-source-map src/sass/social.scss social/style.css",
    "build:social-images": "npx eleventy-social-images --outputDir public --dataFile social/pages.json --templatePath social/template.html",
    "bump": "npm --no-git-tag-version version",
    "clean": "npx del public",
    "debug": "DEBUG=* npx eleventy",
    "format": "run-p format:*",
    "format:js": "prettier '**/*.js' --write && eslint '**/*.js' --fix",
    "format:json": "prettier '**/*.json' --write",
    "format:sass": "stylelint --fix 'src/sass/**/*.scss' 'src/sass/**/**/*.scss' 'src/sass/**/**/**/*.scss' --custom-syntax postcss-scss",
    "serve": "ELEVENTY_ENV=dev npx eleventy --serve",
    "prestart": "npm run clean",
    "start": "cross-env ELEVENTY_ENV=dev npm-run-all build:sass --parallel watch:*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "sass  --no-source-map --watch src/sass:public/css",
    "watch:eleventy": "eleventy --serve --incremental"
  },
  "devDependencies": {
    "@11ty/eleventy": "1.0.0",
    "@11ty/eleventy-plugin-directory-output": "1.0.1",
    "@11ty/eleventy-plugin-inclusive-language": "1.0.3",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@11tyrocks/eleventy-plugin-social-images": "^0.4.1",
    "@types/markdown-it": "12.2.3",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "autoprefixer": "^10.4.4",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.7",
    "del-cli": "4.0.1",
    "eleventy-plugin-lazyimages": "2.1.2",
    "eslint": "8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-jsdoc": "^39.0.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-minifier": "4.0.0",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.6.2",
    "markdown-it-emoji": "2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-scss": "^4.0.3",
    "prettier": "2.6.2",
    "sass": "^1.50.0",
    "stylelint": "14.6.1",
    "stylelint-a11y": "1.2.3",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-images": "2.0.1",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0"
  },
  "browserslist": [
    "> 0.5%",
    "not IE 11"
  ]
}
